<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        tools:context="com.psi.calendar.MainActivity"
        android:weightSum="1">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="1">

        <TextView
            android:text="Calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="70sp"
            android:fontFamily="cursive"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_weight="0.20" />
    </LinearLayout>

    <LinearLayout
        android:background="#80CBC4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/toImportCalendar"
        android:weightSum="1"
        android:layout_height="230dp">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/icon"
            android:id="@+id/imageView8" />

        <TextView
            android:layout_marginTop="15dp"
            android:text="New timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />


    </LinearLayout>

    <LinearLayout
        android:background="#4DB6AC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="match_parent"
        android:id="@+id/openGoogleCalendar">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_calendar_blue"
            android:id="@+id/imageView11"
            android:layout_weight="0.57" />

        <TextView
            android:layout_marginTop="15dp"
            android:text="View on Google Calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textColor="@color/cardview_light_background"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>
