<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:background="#FFFF"
            android:layout_width="match_parent"
            android:id="@+id/progressBar3"
            android:progress="20"
            android:max="100"
            android:progressDrawable="@drawable/greenprogress"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_height="7dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup2"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp">

            <RadioButton
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked1"
                android:buttonTint="#FFF"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_below="@+id/radioGroup2"
                android:layout_alignEnd="@+id/radioButton"
                 />

            <RadioButton
                android:layout_marginTop="10dp"
                android:text="1h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked1"
                android:buttonTint="#FFF"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_below="@+id/radioButton4"
                android:layout_centerHorizontal="true"
                 />

            <RadioButton
                android:layout_marginTop="10dp"
                android:text="2h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked1"
                android:buttonTint="#FFF"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_alignTop="@+id/radioButton3"
                android:layout_alignEnd="@+id/radioButton4" />

            <RadioButton
                android:layout_marginTop="10dp"
                android:text="3h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked1"
                android:buttonTint="#FFF"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_below="@+id/radioButton2"
                android:layout_alignStart="@+id/radioButton3" />

            <RadioButton
                android:layout_marginTop="10dp"
                android:text="4h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked1"
                android:buttonTint="#FFF"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:layout_below="@+id/radioButton1"
                android:layout_alignStart="@+id/radioButton1" />

        </RadioGroup>

        <TextView
            android:text="@string/question_freetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:fontFamily="cursive"
            android:textColor="@color/cardview_light_background"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>