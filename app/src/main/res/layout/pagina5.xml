<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Grade:"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:id="@+id/textView8"
                android:textSize="70sp"
                android:fontFamily="cursive"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#80CBC4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/firstYear"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="toFirstYear"
                android:layout_width="100dp"
                app:srcCompat="@drawable/ic_number_1_drawing"
                android:id="@+id/imageView3"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#4DB6AC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:id="@+id/secondYear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="toSecondYear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_number_2_drawing"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/thirdYear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="toFirstSecondYear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_ampersand"
                android:id="@+id/imageView5"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:onClick="toFirstSecondYear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_number_2_drawing"
                android:id="@+id/imageView6"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignStart="@+id/imageView5"
                android:layout_marginStart="31dp" />


            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:background="#FFFF"
                android:layout_width="match_parent"
                android:id="@+id/progressBar3"
                android:progress="100"
                android:max="100"
                android:progressDrawable="@drawable/greenprogress"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_height="7dp" />

            <ImageView
                android:onClick="toFirstSecondYear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_number_1_drawing"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/imageView5"
                android:layout_marginEnd="35dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
